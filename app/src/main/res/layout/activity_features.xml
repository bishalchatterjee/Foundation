<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_med"
    android:textAlignment="center"
    tools:context=".FeaturesActivity">

    <TextView
        android:id="@+id/app_name_animated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/autour_one"
        android:text="Foundation"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/splash2_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <ImageView
        android:id="@+id/splash2_img"
        android:layout_width="412dp"
        android:layout_height="729dp"
        app:srcCompat="@drawable/splash2"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="51dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getStarted_btn"
        android:layout_width="115dp"
        android:layout_height="59dp"
        android:background="@drawable/custom_btn"
        android:fontFamily="@font/autour_one"
        android:padding="10sp"
        android:text="GET STARTED"
        android:textColor="#0B0A0A"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/splash2_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/splash2_img"
        app:layout_constraintVertical_bias="0.86" />

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="342dp"
        android:layout_height="33dp"
        android:fontFamily="@font/autour_one"
        android:gravity="center"
        android:text=" ❝ Every moment is a fresh beginning ❞"
        android:textColor="#F1F1F1"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/getStarted_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952" />




    <ImageView
        android:id="@+id/google_signin_img"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="@+id/splash2_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getStarted_btn"
        app:srcCompat="@drawable/google_sign_in"
        app:tint="#79FFF5F5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/autour_one"
        android:gravity="center"
        android:text="Want to continue without logging in? "
        android:textColor="#A3A1A1"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/google_signin_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getStarted_btn"
        app:layout_constraintVertical_bias="0.765" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Click! Get Started"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/google_signin_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getStarted_btn"
        app:layout_constraintVertical_bias="0.882" />


</androidx.constraintlayout.widget.ConstraintLayout>