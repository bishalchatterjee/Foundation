<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_med"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/menu_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/autour_one"
        android:text="Foundation"
        android:textColor="#C9FFFFFF"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="326dp"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238"
        app:srcCompat="@drawable/flipper_img11" />


    <ImageView
        android:id="@+id/menu_border"
        android:layout_width="310dp"
        android:layout_height="257dp"
        app:layout_constraintBottom_toTopOf="@+id/menu_constrainLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_title_text"
        app:srcCompat="@drawable/border" />
    <ImageView
        android:id="@+id/menu_border_layer"
        android:layout_width="330dp"
        android:layout_height="270dp"

        app:layout_constraintBottom_toTopOf="@+id/menu_constrainLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_title_text"
        app:srcCompat="@drawable/border" />

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="173dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:autoStart="true"
        android:flipInterval="4000"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        app:layout_constraintBottom_toTopOf="@+id/menu_constrainLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_2ssp"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:text="Hi,there..."
            android:textColor="@color/white"
            android:textSize="10sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_2ssp"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:text="You have the best smile!"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2ssp"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:text="Do you like this app?"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2ssp"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:text="Well if u do, please consider rating a 5⭐!"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2ssp"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:text="Thanks for using the app!"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2ssp"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:text="Hope you are having a great day!"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </ViewFlipper>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_constrainLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/custom_med"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_8sdp"
            app:cardBackgroundColor="#C9FFFFFF"
            app:cardCornerRadius="@dimen/_14sdp"
            app:cardElevation="@dimen/_14sdp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:padding="10dp"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/menu_item_0" />

                    <include layout="@layout/menu_item_1" />

                    <include layout="@layout/menu_item_2" />

                    <include layout="@layout/menu_item_3" />

                    <include layout="@layout/menu_item_4" />

                    <include layout="@layout/menu_item_5" />

                    <include layout="@layout/menu_item_6" />

                    <include layout="@layout/menu_item_7" />



                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>